<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.release.Profile"
    tools:openDrawer="start"
    android:layout_marginBottom="50dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBack"
        android:foregroundGravity="center"
        tools:context=".NavigationDrawerForStudent"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView11"
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:background="@color/editTextBack"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageView1"
            android:textColorHint="@color/editTextText"
            android:hint="  Username">

        </EditText>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:background="@color/loginButton"
            android:src="@drawable/ic_account_box_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:background="@color/editTextBack"
            android:gravity="center_vertical"
            android:textColorHint="@color/editTextText"
            android:layout_toRightOf="@+id/imageView2"
            android:hint="  Email">

        </EditText>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:background="@color/loginButton"
            android:src="@drawable/ic_email_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >

        <EditText
            android:id="@+id/editText3"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:background="@color/editTextBack"
            android:textColorHint="@color/editTextText"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageView3"
            android:hint="  Password">

        </EditText>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:background="@color/loginButton"
            android:src="@drawable/ic_lock_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >

        <EditText
            android:id="@+id/editText4"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:textColorHint="@color/editTextText"
            android:background="@color/editTextBack"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageView4"
            android:hint="  PhoneNumber">

        </EditText>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:background="@color/loginButton"
            android:src="@drawable/ic_phone_iphone_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"



        >

        <EditText
            android:id="@+id/editText5"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:textColorHint="@color/editTextText"
            android:background="@color/editTextBack"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageView5"
            android:hint="  City">

        </EditText>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:background="@color/loginButton"
            android:src="@drawable/ic_location_city_black_24dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:src="@drawable/register"

            />

        <Button
            android:id="@+id/button3"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/imageView7"
            android:background="@color/registerButton"
            android:gravity="center"
            android:text="MODIFY"
            android:onClick="alter"
            android:textColor="@color/ph"
            android:textSize="20dp"
            android:textStyle="normal"
            />

    </RelativeLayout>


</LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>